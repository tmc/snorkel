<% set_default("show_user_status", true); %>
<% set_default("tabs", false); %>
<% add_stylesheet("header") %>

<div class="navbar navbar-fixed-top">
  <div class="navbar-inner" style='padding-right: 10px'>
    <a class="brand" href="<%= url_for("datasets.index") %>" style="padding-right: 0px"><b>snorkel</b> </a>

    <img
      class="pull-left"
      style="width: 32px; height: 32px; margin-top: 5px;"
      src="/images/snorkle_icon.png">
    </img>

    <% if (tabs) { %>
      <div class="pull-left clearfix mtl mll tabs">
        <%= tabs() %>
      </div>
    <% } %>

    <% if (show_user_status) { %>
      <ul class="nav pull-right">
      <% if (username) { %>
          <!-- TODO: Replace this with an actual component? -->
          <li class="mrl prl">
            <a href="#user_dialog" class="navbar-text show_user_dialog" data-toggle="modal" style="padding: 0px">
              <i class="icon-user icon-white"></i><%= username %>
            </a>
          </li>
      <% } else { %>
        <!-- TODO: Replace this with an actual component? -->
        <li class="">
            <a href="/login?next=/datasets"><i class="icon-user icon-white"></i>Log In</a>
        </li>

      <% } %>
      </ul>
    <% } %>
  </div>
</div>
